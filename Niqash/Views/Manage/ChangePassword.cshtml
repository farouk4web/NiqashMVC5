@using Niqash.Resources

@model Niqash.Models.ChangePasswordViewModel
@{
    ViewBag.Title = ViewsResource.changePassword;
}

@Html.Partial("_ManageNav")

<div class="changePassword">

    <div class="intro text-center">
        <p class="lead">@ViewsResource.changePassword</p>

        <div class="succesMsg customHide">
            <div class="alert alert-success">
                <p>
                    <strong>@ViewsResource.success</strong>
                    @ViewsResource.successChangePasswordMsg
                </p>
            </div>
        </div>
        <div class="erorrMsg customHide">
            <div class="alert alert-danger">
                <p>
                    <strong>@ViewsResource.erorr</strong>
                    @ViewsResource.erorrMsg
                </p>
            </div>
        </div>

    </div>

    <form action="/Manage/changePassword" method="post" id="changePasswordForm">
        <div class="form-group">
            @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control siteInput" })
            @Html.ValidationMessageFor(m => m.OldPassword)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control siteInput" })
            @Html.ValidationMessageFor(m => m.NewPassword)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control siteInput" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>

        <div class="form-group text-center">
            @Html.AntiForgeryToken()
            <input type="submit" class="siteBtn" value="@ViewsResource.changePassword" />
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/changePasswordCalls")
}