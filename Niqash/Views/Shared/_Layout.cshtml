@using Niqash.Resources

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @ViewsResource.appName</title>

    @if (UICulture == "ar-EG")
    {
        @Styles.Render("~/Content/rtl")
    }
    else
    {
        @Styles.Render("~/Content/css")
    }

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    @Html.Partial("_Navbar")
    <div class="content">

        <div class="container-fluid">
            <div class="row">

                <div class="col-sm-3 hidden-xs">
                    <div class="ad">
                        <p class="lead">
                            @ViewsResource.adDescription
                        </p>
                    </div>
                </div>

                <div class="col-sm-6">
                    @RenderBody()

                    <div class="searchSection customHide">
                        <span class="closeIcon text-left">x</span>
                        <form action="/Home/Search" method="post">
                            <input type="search" name="query" id="searchQuery" placeholder="@ViewsResource.search" class="siteInput" />
                            <button type="button" class="siteBtn center-block" id="submitBtn">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                            <div class="alert alert-warning customHide text-center" id="searchAlertMsg">
                                <p>
                                    @ViewsResource.searchValidation
                                </p>
                            </div>
                        </form>

                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="ad">
                        <p class="lead">
                            @ViewsResource.adDescription
                        </p>
                    </div>
                </div>

            </div>
        </div>

    </div>

    @Html.Partial("_Footer")

    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
