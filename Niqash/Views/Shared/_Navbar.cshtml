@using Niqash.Resources

@using Microsoft.AspNet.Identity
@if (User.Identity.IsAuthenticated)
{
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">

            <div class="navbar-header">
                <a href="/Home/About" class="navbar-brand">@ViewsResource.appName</a>

                <span class="hidden" id="currentUserId" data-value="@User.Identity.GetUserId()"></span>

                <a href="/users/account/@User.Identity.GetUserId()" class="navbar-toggle">
                    <img src="~/Content/user.jpg" class="navUserimg img-circle">
                </a>
            </div>

            <div class="collapse in navbar-collapse">

                <ul class="nav navbar-nav navbar-right">

                    <li class="user_account_link hidden-xs">
                        <a href="/users/account/@User.Identity.GetUserId()">
                            <img src="~/Content/user.jpg" class="navUserimg img-circle">
                            <span class='navUserName'>name</span>
                        </a>
                    </li>
                    
                    <li>
                        <a href="/Home/Index" title="@ViewsResource.home">
                            <i class="glyphicon glyphicon-home"></i>
                        </a>
                    </li>

                    <li>
                        <a href="/Posts/index" title="@ViewsResource.global">
                            <i class="glyphicon glyphicon-globe"></i>
                        </a>
                    </li>

                    <li>
                        <a href="/users/index" title="@ViewsResource.allUsers">
                            <i class="glyphicon glyphicon-list"></i>
                        </a>
                    </li>

                    <li>
                        <a href="/search" id="searchBtn" title="@ViewsResource.search">
                            <i class="glyphicon glyphicon-search"></i>
                        </a>
                    </li>

                    <li>
                        <a href="/manage/editProfile" title="@ViewsResource.settings">
                            <i class="glyphicon glyphicon-cog"></i>
                        </a>
                    </li>

                    @Html.Partial("_LoginPartial")

                </ul>

            </div>

        </div>
    </div>
}

else
{
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#niqashNavbar" aria-expanded="false">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Home/About" class="navbar-brand">@ViewsResource.appName</a>
            </div>

            <div class="collapse navbar-collapse" id="niqashNavbar">
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
        </div>
    </div>
}