@using Niqash.Resources

@model Niqash.ViewModels.AboutVm
@{
    ViewBag.Title = ViewsResource.about;
}

<div class="about">

    <h2>@ViewsResource.appName</h2>
    <p class="lead text-center">
        @ViewsResource.aboutSitePargraph
    </p>

    <div class="siteStatistics text-center">
        <h2 class="text-capitalize">@ViewsResource.siteStatisticsHeading</h2>
        <div class="row">
            <div class="col-md-6">
                <i class="glyphicon glyphicon-user"></i>
                <h3><span>@Model.UsersNumebr</span> @ViewsResource.user</h3>
            </div>

            <div class="col-md-6">
                <i class="glyphicon glyphicon-list-alt"></i>
                <h3><span>@Model.PostsNumebr</span> @ViewsResource.post</h3>
            </div>

            <div class="col-md-6">
                <i class="glyphicon glyphicon-comment"></i>
                <h3><span>@Model.CommentsNumebr</span> @ViewsResource.comment</h3>
            </div>

            <div class="col-md-6">
                <i class="glyphicon glyphicon-fire"></i>
                <h3><span>@Model.ReactNumebr</span> @ViewsResource.react</h3>
            </div>
        </div>
    </div>

</div>
