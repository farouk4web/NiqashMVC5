@using Niqash.Resources

@model IEnumerable<Niqash.Models.ApplicationUser>
@{
    ViewBag.Title = ViewsResource.searchResult;
}
<div class="searchResult">
    <div class="intro">
        <h3>@ViewsResource.searchResult</h3>
        <span>@Model.Count() @ViewsResource.user</span>
    </div>
    @if (Model.Count() == 0)
    {
        <div class="alert alert-info">
            <p class="lead">
                @ViewsResource.noSearchResult
            </p>
        </div>
    }
    @foreach (var user in Model)
    {
        <div class="user overflow">
            <div class="userImage">
                <img src="@user.ProfilePicSrc" alt="@user.FirstName">
            </div>
            <div class="userName">
                <h4>
                    <a href="/users/account/@user.Id">@user.FirstName @user.LastName</a>
                </h4>
            </div>
        </div>
    }

</div>
