@using Niqash.Resources

@model Niqash.Models.RegisterViewModel
@{
    ViewBag.Title = ViewsResource.register;
}

<div class="register">
    <div class="intro text-center">
        <p class="lead">@ViewsResource.newAccountMsg</p>
    </div>

    <form action="/Account/Register" method="post">

        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control siteInput text-capitalize" })
            @Html.ValidationMessageFor(m => m.FirstName)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control siteInput text-capitalize" })
            @Html.ValidationMessageFor(m => m.LastName)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control siteInput" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control siteInput" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="form-group text-center">
            @Html.AntiForgeryToken()
            <input type="submit" class="siteBtn" value="@ViewsResource.register" />
        </div>
        <p>
            @ViewsResource.haveAccountMsg?
            @Html.ActionLink(ViewsResource.login, "Login")
        </p>
        
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}