@using Niqash.Resources

@model Niqash.Models.ResetPasswordViewModel
@{
    ViewBag.Title = ViewsResource.resetPassword;
}

<div class="resetPassword">
    <div class="intro text-center">
        <p class="lead">@ViewsResource.resetPasswordMsg</p>
    </div>

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control siteInput" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control siteInput" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control siteInput" })
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>

        <div class="form-group text-center">
            @Html.HiddenFor(model => model.Code)
            @Html.AntiForgeryToken()
            <input type="submit" class="siteBtn" value="@ViewsResource.resetPassword" />
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
